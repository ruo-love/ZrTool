{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "types": ["jest"],
    "baseUrl": ".",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "rootDir": "./src",
    "noEmitHelpers": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ES2019", "DOM"]
  },
  "include": ["src/**/*.ts", "src/*.ts", "src/**/**/*.ts", "src/**/**/*.test.ts", "index.d.ts", "type.d.ts"],
  "exclude": ["node_modules"]
}
